<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%=title%>
    </title>
    <%include ./template/head.ejs%>
</head>

<body id="wrapper">
    <!-- header -->
    <div id="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 header-content">
                    <div id="logo">
                        <a href="/"><h1>
                            <span style="color: #fff">Bóng</span>
                            <span style="color: #000000; background-color: #c6e6c7;border-radius: 6px;padding: 0 5px;">đá</span>
                        </h1></a>
                    </div>
                </div>
                <div class="col-lg-3 header-contact" style="color: #fff;font-size:17px;font-weight: 500">
                    <div class="icon-box-contact">
                        <span><i class="fas fa-envelope"></i> abc@gmail.com</span>
                    </div>
                    <div class="icon-box-contact">
                        <span><i class="fas fa-phone"></i> 0999999999</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- header -->
    <!-- search bar -->
    <div class="container">
        <div id="buffer" style="padding:30px">
            <form class="form-inline searchbar" action="/search" method="post" accept-charset="utf-8">
                <input type="text" class="search_input" name="keyword" placeholder="Tìm kiếm...">
                <button type="submit" class="search_icon"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </div>
    <!-- search bar end -->
    <!-- Content -->
    <!-- Section 1 start-->
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="title-h3">
                        <h3>Tin hot</h3>
                    </div>
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <!-- Carousel News List -->

                            <%-carousel%>

                                <!-- Carousel News List end-->
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="title-h3">
                        <h3>Quảng cáo</h3>
                    </div>
                    <img src="images/qc-1.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Section 1 end-->
    <!-- Section 2 start -->
    <div class="section">
        <div class="container">
            <div class="row">
                <!-- Quảng cáo -->
                <div class="col-lg-7">
                    <div class="title-h3">
                        <h3>Quảng cáo chất lượng</h3>
                    </div>
                    <div id="chart-slider" class="carousel slide" data-ride="carousel">
                        <img src="images/qc-2.jpg" alt="">
                    </div>
                </div>
                <!-- News list -->
                <div class="col-lg-5 summary-highlight-news">
                    <%-NewestNewsList%>
                </div>
                <!--News list-->
            </div>
        </div>
    </div>
    <!-- Section 2 end -->
    <!-- Section 3 start-->
    <div class="section">
        <div class="container">
            <div class="title-h3">
                <h3>Tin tức giải đấu</h3>
            </div>
            <%-IndexCategoryNewsList%>
        </div>
    </div>
    <!-- Section 3 end-->
    <!-- Content -->

    <!--Nav openning -->
    <div id="dock-container">
        <div id="dock">
            <ul>
                <%-CategoryList%>
            </ul>
        </div>
    </div>
    <!--Nav closing-->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>

</html>